<% if (billet !=undefined) {%>
<% var months = ["Janvier","Février","Mars","Avril","Mai","Juin","Juillet","Août","Septembre","Octobre","Novembre","Décembre"]; %>

<body>
    <div class="billet" style="
        display: flex;
        margin-left: 5%;
        border-style: solid;
        text-align: center;
        width: max-content;
        font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;
        font-size: 20px;
        flex-wrap: wrap;
        padding: 15px;
        ">
        <div>
            <table>
                 <tr>
                    <td>
                        <img src="<%= img%>" alt="" style="height: 300px; width: 300px; margin-top: 15px; 
                        margin-left: 15px; margin-bottom: 15px;">
                    </td>
                    <td>
                        <h1 style="text-align: center;">MUSÉE</h1>     
                        <h1 style="text-align: center;"> DES ASTRES</h1>
                        <img src="<%= logo%>" alt="" style="width: 100px; height: 100px; display: block; margin-left: auto; margin-right: auto;">
                    </td>
                </tr>
                <tr>
                    <td >
                        <h2 style="text-align: center; width: 300px"><%= billet.prenom%> <%= billet.nom%></h2> 
                        <p style="text-align: center; width: 300px">Email : <%= billet.email%></p>
                        <p style="text-align: center; width: 300px">Adresse : <%= billet.adresse%></p>
                        <%if (billet.telephone > 0) {%>
                        <p style="text-align: center;">Telephone : <%= billet.telephone%></p>
                        <% } %>
                        <p style="text-align: center;">Vous avez reservé : <%if (billet.billets_id[0] > 0) {%><br> - <%= billet.billets_id[0]%> billet enfant<% } %>
                            <%if (billet.billets_id[1] > 0) {%><br> - <%= billet.billets_id[1]%> billets adolescent<% } %>
                            <%if (billet.billets_id[2] > 0) {%><br> - <%= billet.billets_id[2]%> billets jeune adulte<% } %>
                            <%if (billet.billets_id[3] > 0) {%><br> - <%= billet.billets_id[3]%> billets adulte<% } %>
                            <%if (billet.billets_id[4] > 0) {%><br> - <%= billet.billets_id[4]%> billets ainé<% } %>
                            <%if (billet.billets_id[5] > 0) {%><br> - <%= billet.billets_id[5]%> billets étudiant<% } %>
                            <%if (billet.billets_id[6] > 0) {%><br> - <%= billet.billets_id[6]%> billets famille<% } %>
                        </p>
                        <%if (billet.rdv_etoile) {%>
                            <p style="text-align: center;">Option <i>Rendez-vous sous les étoiles</i></p>
                        <% } %>
                        <%if (billet.film) {%>
                            <p style="text-align: center;">Option <i>Film</i></p>
                        <% } %>
                        <p style="text-align: center;">Prix : <%= billet.prix %> $ CA</p>
                        <p style="text-align: center;">pour le <%= billet.datetime.getDate() %> <%= months[billet.datetime.getMonth()] %> <%= billet.datetime.getFullYear() %>.</p>
                    </td>
                    <td>
                        <div style="align-self: center; text-align: center;">
                            <img  width="80%" src="<%= qr%>" alt="QRCode">
                            <small><%= billet._id %></small> 
                        </div> 
                    </td>
                </tr>
            </table>
    </div>
</body>

<% }else {%>
    <section class="py-5 text-center container">
        <div class="row py-lg-5">
            <div class="col-lg-6 col-md-8 mx-auto">
                <h1 class="fw-light">Aucun billet trouvé.</h1>
                <h2 class="fw-light">Nous nous excusons pour cet inconvénient.</h2>
                <a href="/" >Retour à l'accueil</a>
            </div>
        </div>
    </section>
<% } %>