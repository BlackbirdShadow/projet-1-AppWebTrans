<%- include ('../partials/header') %>

<% if (items !=undefined && items.length>0) {%>

	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
  	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
  	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
  	<style>
  	.carousel-inner > .item > img,
  	.carousel-inner > .item > a > img {
    width: 70%;
    margin: auto;
  }
  </style>

<div class="">

	<div >
		<% if (items !=undefined && items.length>0) {%>

		<div class="container">
			<br>
			<div id="myCarousel" class="carousel slide" data-ride="carousel">
			  <!-- Indicators -->
			  <ol class="carousel-indicators">
				<li data-target="#myCarousel" data-slide-to="0" class="active"></li>
				<li data-target="#myCarousel" data-slide-to="1"></li>
				<li data-target="#myCarousel" data-slide-to="2"></li>
			  </ol>
		  
			  <!-- Wrapper for slides -->
			  <div class="carousel-inner" role="listbox">
		  
				<div class="item active">
				  <img src="<%= items[0].image %>" alt="Chania" width="460" height="345">
				  <div class="carousel-caption">
					<h5><%= items[0].titre %></h5>
					<p><%= items[0].desc %></p>
				  </div>
				</div>
		  
				<div class="item">
					<img src="<%= items[1].image %>" alt="Chania" width="460" height="345">
					<div class="carousel-caption">
					  <h5><%= items[1].titre %></h5>
					  <p><%= items[1].desc %></p>
				  </div>
				</div>
			  
				<div class="item">
					<img src="<%= items[2].image %>" alt="Chania" width="460" height="345">
					<div class="carousel-caption">
					  <h5><%= items[2].titre %></h5>
					  <p><%= items[2].desc %></p>
				  </div>
				</div>
			
			  </div>
		  
			  <!-- Left and right controls -->
			  <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
				<span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
				<span class="sr-only">Previous</span>
			  </a>
			  <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
				<span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
				<span class="sr-only">Next</span>
			  </a>
			</div>
		  </div>

			<% }else {%>

				<p><strong> Non disponible </strong></p>

			<% } %>

		</div>

		<div class="album py-5">
			<div class="container">
				<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">

				<% nombreActu=0 %>

				<% items.forEach(function(item,index){ %>
				<% nombreActu++ %>
				<% if (nombreActu> 3 && nombreActu < 10) {%>
				<% var type %>

				<% if (item.date_fin >= 0 ) {%>
				<% type="/expositions" %>
				<% }else {%>
				<% type="/experiences" %>
				<%}%>

				<div class="col">
					<div class="card shadow-sm ">

						<a href="<%= type%>">
							<svg class="bd-placeholder-img card-img-top actu" width="100%" height="225"	xmlns="http://www.w3.org/2000/svg"
								role="img" aria-label="Placeholder: Thumbnail" preserveAspectRatio="xMidYMid slice"	focusable="false">
								<title>Placeholder</title>
								<rect width="100%" height="100%"
									fill="#55595c" />
								<image
									xlink:href="<%= item.image %>" class="actuimage" x="0" y="0"
									style="max-width:700px; height:250px;" />
								<text x="5%" y="90%" fill="#eceeef" dy=".3em"
									style="font-size: 20; font-weight:bolder; font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;
									stroke: black; stroke-width: 1px;">
									<%= item.titre %>
								</text>
							</svg>
						</a>

						<div class="actuMiddle"></div>

					</div>

				</div>
				<%}; %>
				<%}); %>
			</div>
		</div>
	</div>
</div>

<% }else {%>
	<section class="py-5 text-center container">
	  <div class="row py-lg-5">
		<div class="col-lg-6 col-md-8 mx-auto">
		  <h1 class="fw-light">Aucune donnée trouvée.</h1>
			<a href="https://www.google.com" class="btn btn-primary my-2" style="background-color: #182030;" id="Close">Partir</a>
		  </p>
		</div>
	  </div>
	</section>
<% } %>

<%- include ('../partials/footer') %>