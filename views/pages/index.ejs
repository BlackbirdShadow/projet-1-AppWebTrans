				<%}); %>
				<% }else {%>
					<p><strong> Non disponible </strong></p>
					<% } %>
</div>

<% nombreActu = 0 %>
  
<div class="album py-5">
	<div class="container">
		<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">

			<% items.forEach(function(item,index){ %>
				<% nombreActu++ %>
				<% if (nombreActu < 4 || nombreActu > 10) {%>
					
			<div class="col">
				<div class="card shadow-sm ">
					<a href="/expositions">
				        <svg class="bd-placeholder-img card-img-top actu" width="100%" height="225" xmlns="http://www.w3.org/2000/svg" 
				    	role="img" aria-label="Placeholder: Thumbnail" preserveAspectRatio="xMidYMid slice" focusable="false">
						<title>Placeholder</title>
						<rect width="100%" height="100%" fill="#55595c"/>
						<image xlink:href="<%= item.Image %>" class="actuImage"
						x="0" y="0" style="max-width:500px; height:230px;"/>
						<text x="5%" y="90%" fill="#eceeef" dy=".3em" style="font-size: 20; font-weight:bolder;
						stroke: black; stroke-width: 1px;">
							<%= item.Titre %>
						</text>
				        </svg>
				    </a>
				    <div class="actuMiddle"></div>				  
				</div>
	 		</div>
			    <%}; %>
			<%}); %>

		</div>
	</div>
</div>
		
				

